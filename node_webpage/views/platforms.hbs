<h1>Game Platforms</h1>
<table>
  <thead>
    <tr>
      <th>Platform ID</th>
      <th>Platform Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each platforms}}
    <tr>
      <td>{{platformID}}</td>
      <td>{{platform}}</td>
      <td class="actions">
        <form action="/edit-platform" method="GET" style="display:inline;">
          <input type="hidden" name="platformID" value="{{platformID}}" />
          <button type="submit">Edit</button>
        </form>
        <form action="/delete-platform" method="POST" style="display:inline;">
          <input type="hidden" name="platformID" value="{{platformID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<h1>Add New Platform</h1>
<form action="PLACEHOLDER" method="POST">
  <label for="platform">Platform Name</label>
  <input type="text" id="platform" name="platform" required>

  <button type="submit">Add Platform</button>
</form>