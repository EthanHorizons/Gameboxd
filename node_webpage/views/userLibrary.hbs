<form id="userNavForm" action="/userLibrary/{{userID}}" method="GET">
  <input type="hidden" id="userID" name="userID" value="{{userID}}" />

  <button type="button" id="prevBtn">&#8592;</button>
  <span id="userIDDisplay">User ID: {{userID}}</span>
  <button type="button" id="nextBtn">&#8594;</button>
</form>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Genre ID</th>
      <th>Platform ID</th>
      <th>Users</th>
      <th>Rating</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each library}}
    <tr>
      <td>{{ID}}</td>
      <td>{{name}}</td>
      <td>{{genre}}</td>
      <td>{{platform}}</td>
      <td>{{numUsers}}</td>
      <td>{{rating}}</td>
      <td>{{description}}</td>
      <td>
        <form action="/delete-from-library" method="POST">
          <input type="hidden" name="gameID" value="{{ID}}" />
          <input type="hidden" name="userID" value="{{../userID}}" />
          <button type="submit">Delete from Library</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<h1>Update Game to Library</h1>
<form action="/add-game-library/{{userID}}" method="POST" class="GenreForm">
  <div class="formGroup">
    <div class="formTitle">
      <label for="gameID">Game</label>
      <select id="gameID" name="gameID" required>
        <option value="">Select a game</option>
      </select>
    </div>
  </div>

  <button type="submit">Add Game</button>
</form>



<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filter = ''; // or 'genre', etc.
    const filterString = ''; // e.g., filter by PlayStation
    const userID = document.getElementById('userID').value;
    console.log('Loading games with filter:', filter, 'and filterString:', filterString);
    fetch(`/games-filter-json?filter=${encodeURIComponent(filter)}&filterString=${encodeURIComponent(filterString)}&userID=${encodeURIComponent(userID)}`)
      .then(res => res.json())
      .then(data => {
        const gameSelect = document.getElementById('gameID');
        gameSelect.innerHTML = '<option value="">Select a game</option>';
        data.forEach(game => {
          const option = document.createElement('option');
          option.value = game.gameID;
          option.textContent = game.name;
          gameSelect.appendChild(option);
        });
      })
      .catch(err => console.error('Failed to load filtered games', err));
  });

  const MIN_ID = 1;
  const MAX_ID = {{maxUserID}};

  const form = document.getElementById('userNavForm');
  const userIDInput = document.getElementById('userID');
  const display = document.getElementById('userIDDisplay');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');

  const addForm = document.getElementById('addGameForm');
  const addUserIDInput = document.getElementById('addUserID');

  function navigate(delta) {
    let id = parseInt(userIDInput.value);
    id += delta;
    if (id < MIN_ID || id > MAX_ID) return;

    userIDInput.value = id;
    display.textContent = `User ID: ${id}`;
    form.action = `/userLibrary/${id}`;



    form.submit();
  }

  prevBtn.addEventListener('click', () => navigate(-1));
  nextBtn.addEventListener('click', () => navigate(1));
</script>
