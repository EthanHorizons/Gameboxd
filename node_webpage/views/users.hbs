<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>Username</th>
      <th>Email</th>
      <th>Number of Games</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>{{userID}}</td>
      <td>{{username}}</td>
      <td>{{email}}</td>
      <td>{{numGames}}</td>
      <td class="actions">
        <form action="/edit-user" method="GET" style="display:inline;">
          <input type="hidden" name="userID" value="{{userID}}" />
          <button type="submit">Edit</button>
        </form>
        <form action="/delete-user" method="POST" style="display:inline;">
          <input type="hidden" name="userID" value="{{userID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

<h1>Add User</h1>
<form action="/add-user" method="POST">
  <label for="username">Username</label>
  <input type="text" id="username" name="username" required>

  <label for="email">Email</label>
  <input type="email" id="email" name="email" required>

  <label for="numGames">Number of Games</label>
  <input type="number" id="numGames" name="numGames" min="0" required>

  <button type="submit">Add User</button>
</form>

